<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Projeto de formatura do curso de ciencias da computacao, do Centro Universitario da FEI, sob orientacao do Prof. Dr. Plinio T. Aquino Jr.
Integrantes:
Andrey Masiero
Fagner Donadon
Guilherme Wachs
Matheus Gon√ßalves
Tom Mix Petreca</description>
    <display-name>SiGePAPP - Sistema de Gerenciamento de Patterns, Anti-Patterns e Personas</display-name>
    <servlet>
        <description>Servlet responsavel pelo login do usuario no sistema. Este servlet ira setar variaveis de
 Sessao para serem utilizadadas na aplicacao.</description>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.edu.fei.sigepapp.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAtribDeEstrut</servlet-name>
        <servlet-class>br.edu.fei.sigepapp.servlet.GetAtribDeEstrut</servlet-class>
    </servlet>
    <servlet>
        <description>Busca as cidades no a partir do estado escolhido</description>
        <servlet-name>GetCidadeServlet</servlet-name>
        <servlet-class>br.edu.fei.sigepapp.servlet.GetCidadeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    	<description>Servlet responsavel por verificar se existe o login desejado pelo usuario</description>
    	<servlet-name>ExisteLoginServlet</servlet-name>
    	<servlet-class>br.edu.fei.sigepapp.servlet.ExisteLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>ExisteLoginServlet</servlet-name>
    	<url-pattern>/ExisteLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping><servlet-name>GetAtribDeEstrut</servlet-name><url-pattern>/GetAtribDeEstrut</url-pattern></servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCidadeServlet</servlet-name>
        <url-pattern>/GetCidadeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <description>Oracle Datasource</description>
        <res-ref-name>jdbc/sigepapp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>



 
    <resource-ref>
        <description>jdbc:oracle:thin:@127.0.0.1:1521:xe</description>
        <res-ref-name>SigepappDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    </web-app>
